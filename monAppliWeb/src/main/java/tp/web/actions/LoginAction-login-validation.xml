<!DOCTYPE validators PUBLIC 
  		"-//Apache Struts//XWork Validator 1.0.2//EN"
  		"http://struts.apache.org/dtds/xwork-validator-1.0.2.dtd">

<validators>


	<field name="utilisateur.username">
	    <field-validator type="requiredstring">
			<message><![CDATA[ username is required ]]></message>
		</field-validator>
		<field-validator type="stringlength">
		  <param name="minLength">3</param>
		  <message><![CDATA[ at least 3 characters ]]></message>
		</field-validator>
	</field>
	 
	<field name="utilisateur.password">
	    <field-validator type="requiredstring">
			<message><![CDATA[ password is required ]]></message>
		</field-validator>
		<field-validator type="stringlength">
		  <param name="minLength">6</param>
		  <message><![CDATA[ at least 6 characters ]]></message>
		</field-validator>
	</field>
 
</validators>